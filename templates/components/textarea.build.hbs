<textarea
  class="form-control"
  v-model.trim.lazy="value"
  v-on:blur="updateValue()"
  v-on:input="saveProgress"
  :name="name"
  :id="name"
  :placeholder="placeholder"
  :rows="rows"
></textarea>
<p class="text-danger" v-if="$v.value.required === false && $v.value.$dirty">Field is required.</p>
