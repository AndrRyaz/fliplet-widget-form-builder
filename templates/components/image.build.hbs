<label :for="name" class="fileUpload btn btn-primary">
  <div class="canvas-holder">
    <span v-if="value.length > 1" class="badge">\{{value.length}}</span>
    <canvas ref="canvas"></canvas>
  </div>
  <i class="fa fa-plus" aria-hidden="true"></i>
  <span v-if="value.length">Replace image</span>
  <span v-else>Choose image</span>
  <input multiple type="file" ref="imageInput" :id="name" :name="name" class="input-file selectfile" accept="image/gif, image/jpg, image/jpeg, image/tiff, image/png" :required="required" :data-folder-id="mediaFolderId" v-on:click="onFileClick" v-on:change="onFileChange">
</label>
