<label :for="name" class="fileUpload btn btn-primary">
  <canvas :data-file-name="name"></canvas>
  <i class="fa fa-plus" aria-hidden="true"></i>
  <span v-if="selectedImage">Replace image</span>
  <span v-else>Choose image</span>
  <input type="file" data-file-image ref="imageInput" :id="name" :name="name" class="input-file selectfile" accept="image/gif, image/jpg, image/jpeg, image/tiff, image/png" :required="required" v-on:change="updateValue()">
</label>
