<input
  type="text"
  class="form-control"
  v-model.trim="value"
  v-on:input="updateValue()"
  :name="name"
  :id="name"
  :placeholder="placeholder"
/>
<div class="text-danger" v-if="!$v.value.minLength">Field must have at least 5 characters.</div>
<div class="text-danger" v-if="!$v.value.required && $v.value.$model !== ''">Field is required.</div>
