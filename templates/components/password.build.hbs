<input
  type="password"
  class="form-control"
  :class="{ disabled: autogenerate }"
  :readonly="autogenerate"
  autocomplete="off"
  v-on:input="updateValue()"
  :name="name"
  :id="name"
  :placeholder="placeholder"
  :required="required"
/>

<p class="help-block" v-if="autogenerate">A password will be automatically generated</p>

<div class="form-group row clearfix" v-if="confirm && !autogenerate" :class="{ 'has-error': hasConfirmationError }">
  <br />
  <div class="col-xs-12">
    <label class="control-label" for="confirmPassword">Confirm password <template v-if="required"><span class="required-info">*</span></template></label>
  </div>
  <div class="col-xs-12">
    <input
      type="password"
      class="form-control"
      v-model.trim="valueConfirmation"
      v-on:input="checkPasswordConfirmation()"
      id="confirmPassword"
      ref="confirmPassword"
      :required="required"
      autocomplete="off"
    />
    <span v-if="hasConfirmationError" class="help-block">Password confirmation does not match password.</span>
  </div>
</div>
