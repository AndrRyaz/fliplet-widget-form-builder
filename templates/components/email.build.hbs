<input
  type="email"
  class="form-control"
  v-model.trim="value"
  v-on:input="updateValue()"
  :name="name"
  :id="name"
  :placeholder="placeholder"
  :required="required"
/>
<div class="text-danger" v-if="!$v.value.required || !$v.value.email">Field is required</div>
<div class="text-danger" v-if="!$v.value.email">Email should be valid</div>
