<template v-for="(option, index) in options">
  <div class="radio radio-icon">
    <input type="radio" :id="name + '-' + index" :name="name" v-model="value" :required="required" :value="option.id" v-on:input="updateValue()" >
    <label :for="name + '-' + index">
      <span class="check"><i class="fa fa-circle"></i></span> \{{ option.id }}&nbsp;&nbsp;&nbsp;
    </label>
  </div>
</template>
