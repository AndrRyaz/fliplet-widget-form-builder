<div class="form-group">
  <label>Default value</label>
  <textarea class="form-control" v-model.trim="value" placeholder="Default value"></textarea>
</div>
<div class="form-group">
  <label>Placeholder</label>
  <input class="form-control" type="text" v-model.trim="placeholder" placeholder="Placeholder" />
</div>
<div class="form-group">
  <label>Rows (defines the height of the textarea)</label>
  <select v-model="rows" class="form-control">
    <option :value="number" v-for="number in [1,2,3,4,5,6,7,8,9]">\{{ number }}</option>
  </select>
</div>