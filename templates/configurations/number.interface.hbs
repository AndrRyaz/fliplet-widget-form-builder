<div class="form-group">
  <label>Default value</label>
  <input class="form-control" type="text" v-model.trim="value" placeholder="Default value" />
</div>
<div class="form-group">
  <label>Placeholder</label>
  <input class="form-control" type="text" v-model.trim="placeholder" placeholder="Placeholder text" />
</div>
<div class="form-group cleafix">
    <div class="col-xs-12">
      <label class="control-label">What numbers should be allowed?</label>
    </div>
    <div class="col-xs-12">
      <div class="radio radio-icon">
        <input type="radio" id="numbers-all" name="numbers-option" v-bind:value="false" v-model="positiveOnly">
        <label for="numbers-all">
          <span class="check"><i class="fa fa-circle"></i></span> <strong>Allow all numbers</strong> (positive and negative integers)
        </label>
      </div>
      <div class="radio radio-icon">
        <input type="radio" id="numbers-natural" name="numbers-option" v-bind:value="true" v-model="positiveOnly">
        <label for="numbers-natural">
          <span class="check"><i class="fa fa-circle"></i></span> <strong>Only allow positive numbers</strong> (natural numbers)
        </label>
      </div>
    </div>
</div>