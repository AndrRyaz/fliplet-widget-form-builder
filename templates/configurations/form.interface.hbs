<form v-on:submit.prevent="onSubmit">
  <div class="form-group">
    <label>Field ID</label>
    <input class="form-control" type="text" v-model.trim="name" placeholder="Field name" />
  </div>

  <div class="form-group">
    <label>Field description</label>
    <input class="form-control" type="text" v-model.trim="label" placeholder="Field description" />
  </div>

  <div class="form-group">
    <label>Is this field required?</label>
    <select v-model="required" class="form-control">
      <option v-bind:value="true">Yes, this field is required</option>
      <option v-bind:value="false">No, this field isn't required</option>
    </select>
  </div>

  {{#hasOptions}}
    <div class="form-group">
      <label>Options (one per line)</label>
      <textarea v-on:input="_setOptions($event.target.value)" class="form-control" v-model="_options"></textarea>
    </div>
  {{/hasOptions}}

  {{{ template }}}

  <hr />
  <button type="submit" class="btn btn-primary">Save changes</button>
</form>