<div class="form-group">
  <label>Default value</label>
  <input class="form-control" type="text" v-model.trim="value" placeholder="Default value" />
</div>
<div class="form-group">
  <label>Placeholder</label>
  <input class="form-control" type="text" v-model.trim="placeholder" placeholder="Placeholder text" />
</div>
<div class="form-group">
  <label>Encrypt password before submitting</label>
  <div>
    <div class="checkbox checkbox-icon">
      <input type="checkbox" id="encrypt_pass" name="passwordEncryption" v-model="passEncrypt" value="yes">
      <label for="encrypt_pass">
        <span class="check"><i class="fa fa-check"></i></span> Yes, please
      </label>
    </div>
    <div class="checkbox checkbox-icon">
      <input type="checkbox" id="no_encrypt_pass" name="passwordEncryption" v-model="passEncrypt" value="no">
      <label for="no_encrypt_pass">
        <span class="check"><i class="fa fa-check"></i></span> No, no need
      </label>
    </div>
  </div>
</div>
