<div class="form-group">
  <label>Default value</label>
  <input class="form-control" type="text" v-model.trim="value" placeholder="Default value" />
</div>
<div class="form-group">
  <label>Placeholder</label>
  <input class="form-control" type="text" v-model.trim="placeholder" placeholder="Placeholder text" />
</div>
<div class="form-group">
  <label>Input type</label>
  <label for="input-type" class="select-proxy-display">
    <span class="icon fa fa-chevron-down"></span>
    <span class="select-value-proxy">Text</span>
    <select class="form-control hidden-select" id="input-type" v-model="type">
      <option value="text">Text</option>
      <option value="password">Password (hidden characters)</option>
      <option value="email">E-mail address</option>
      <option value="url">URL</option>
      <option value="tel">Telephone</option>
    </select>
  </label>
</div>
