<div class="form-group">
  <label>Options (one per line)</label>
  <textarea v-on:input="setOptions($event.target.value)" class="form-control" v-model="optionsString"></textarea>
</div>
<div class="form-group">
  <label>Option placeholder</label>
  <input class="form-control" type="text" v-model.trim="placeholder" placeholder="Placeholder" />
</div>